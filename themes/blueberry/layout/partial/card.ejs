<div class="col-xs-12 col-md-6 <%- post.col_class ? post.col_class : '' %>  js--posts-filter-item" data-groups='["<%- post.data_groups ? post.data_groups : '' %>"]'>
  <figure class="card card-blueberry">
    <!-- Featured image -->
    <% var image = first_image(post); %>
    <% if (image){ %>
      <a href="<%- post.path %>">
        <img class="card-img-top" src="<%- image.src ? image.src : '' %>" title="<%- image.title ? image.title : '' %>" alt="<%- image.alt ? image.alt : '' %>">
      </a>
    <% } %>
    <!-- Card body -->
    <div class="card-body">
      <h3 class="card-title font-size-21 d-flex justify-content-between">
        <span><%- post.title %></span>
        <span>$<%- format_price(post.price) %></span>
      </h3>
      <% if (post.excerpt){ %>
        <p class="mb-2 pb-1"><%- strip_html(post.excerpt) %></p>
      <% } %>
      <div class="d-flex align-items-center justify-content-between">
        <% if (post.ebay_url && post.etsy_url){ %>
          <!-- <div class="btn-group" role="group"> -->
            <span>
              <a href="<%- post.ebay_url %>" target="_blank" class="btn btn-blueberry btn-primary" role="button">Buy on eBay</a>
              <a href="<%- post.etsy_url %>" target="_blank" class="btn btn-blueberry btn-link pl-2">or Etsy</a>
            </span>
          <!-- </div> -->
        <% } else if (post.ebay_url){ %>
          <a href="<%- post.ebay_url %>" target="_blank" class="btn btn-blueberry btn-primary" role="button">Buy on eBay</a>
        <% } %>
        <a href="<%- post.path %>" class="strong">More info</a>
      </div>
    </div>
  </figure>
</div>
