<aside id="post-aside">
  <%- partial('partial/navbar-post') %>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="position-sticky">
          <% if (first_photo_url(page)){ %>
            <img class="sticker-featured-image" src="<%- first_photo_url(page) %>" alt="<%- page.featured_image_alt ? page.featured_image_alt : '' %>">
          <% } %>
          <h1 class="mb-0 font-size-28"><%- page.title %></h1>
          <% if (page.excerpt){ %>
            <p class="mb-3 text-muted"><%- strip_html(page.excerpt) %></p>
          <% } %>
          <div class="js--init-content-buy-button">
            <% if (page.ebay_url && page.etsy_url){ %>
              <a href="<%- page.ebay_url %>" target="_blank" class="btn btn-blueberry btn-primary" role="button">$<%- page.price %> on eBay</a>
              <a href="<%- page.etsy_url %>" target="_blank" class="btn btn-blueberry btn-link" role="button">Also on Etsy</a>
            <% } else if (page.ebay_url){ %>
              <a href="<%- page.ebay_url %>" target="_blank" class="btn btn-blueberry btn-primary" role="button">$<%- page.price %> on eBay</a>
            <% } %>
          </div>
          <dl class="mt-3 mt-lg-4  sticker-properties clearfix">
            <% if (page.material){ %>
              <dt>Material</dt>
              <dd><%- page.material %></dd>
            <% } %>
            <% if (page.size){ %>
              <dt>Size</dt>
              <dd><%- page.size %></dd>
            <% } %>
            <% if (page.colors){ %>
              <dt>Colors in stock</dt>
              <dd class="text-transparent js--init-swatches"><%- page.colors.join(", ") %></dd>
            <% } %>
          </dl>
          <% if (theme.email){ %>
            <p class="mt-2 mb-2"><a href="mailto:<%- theme.email %>">Email us for custom colors, sizes and designs.</a></p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <img class="w-100 mt-2 d-lg-none" src="<%- partial('data-uri/wave-aside') %>" />
</aside>
