<aside id="post-aside">
  <div class="js--init-sticky-container" data-viewport-threshold="992">
    <%- partial('partial/item-navbar') %>
    <div class="container">
      <div class="row">
        <div class="col">
            <!-- Featured image -->
            <% var image = first_image(page); %>
            <% if (image){ %>
              <img class="featured-image" src="<%- image.src ? image.src : '' %>" title="<%- image.title ? image.title : '' %>" alt="<%- image.alt ? image.alt : '' %>">
            <% } %>
            <h1 class="mb-1 font-size-28"><%- post.title %></h1>
            <% if (post.excerpt){ %>
              <p class="text-muted"><%- strip_html(post.excerpt) %></p>
            <% } %>
            <div class="mt-3 js--init-content-buy-button">
              <% if (post.ebay_url && post.etsy_url){ %>
                <a href="<%- post.ebay_url %>" target="_blank" class="btn btn-blueberry btn-primary" role="button">$<%- post.price %> on eBay</a>
                <a href="<%- post.etsy_url %>" target="_blank" class="btn btn-blueberry btn-link" role="button">Also on Etsy</a>
              <% } else if (post.ebay_url){ %>
                <a href="<%- post.ebay_url %>" target="_blank" class="btn btn-blueberry btn-primary" role="button">$<%- post.price %> on eBay</a>
              <% } %>
            </div>
            <dl class="mt-3 mt-lg-5  sticker-properties clearfix">
              <% if (post.material){ %>
                <dt>Material</dt>
                <dd><%- post.material %></dd>
              <% } %>
              <% if (post.size){ %>
                <dt>Size</dt>
                <dd><%- post.size %></dd>
              <% } %>
              <% if (post.colors){ %>
                <dt>Colors</dt>
                <dd class="text-transparent js--init-swatches"><%- post.colors.join(", ") %></dd>
              <% } %>
            </dl>
            <% if (theme.email){ %>
              <p class="mt-2 mt-lg-3 mb-2"><a href="#contact">Contact us for custom colors, sizes and designs.</a></p>
            <% } %>
        </div>
      </div>
    </div>
    <img class="w-100 mt-2 d-lg-none" src="<%- partial('data-uri/wave-aside') %>" />
  </div>
</aside>
